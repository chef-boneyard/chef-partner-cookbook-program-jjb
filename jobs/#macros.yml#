- builder:
    name: check-markdown-files-are-there
    builders:
      - shell: |
          #!/bin/bash
          if [ ! -f CHANGELOG.md ]
            then
            echo "#"
            echo "#"
            echo "#"
            echo "# NO CHANGELOG.md "
            echo "#"
            echo "#"
            echo "#"
          fi

          if [ ! -f README.md ]
            then
            echo "#"
            echo "#"
            echo "#"
            echo "# NO README.md "
            echo "#"
            echo "#"
            echo "#"
          fi

          if [ ! -f TESTING.md ]
            then
            echo "#"
            echo "#"
            echo "#"
            echo "# NO TESTING.md "
            echo "#"
            echo "#"
            echo "#"
          fi

